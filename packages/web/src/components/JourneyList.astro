---
import dayjs from 'dayjs'

interface Props {
    day: string
    isOutbound?: boolean
    outbound: string
    inbound: string
}

const { day, outbound, isOutbound = false, inbound } = Astro.props
---
<div class="rounded h-fit shadow grow">
    <div class="border-solid border-b-2 border-ternary p-3">
        <h3 class="font-bold">
            {isOutbound ? "OUT" : "RETURN"}
        </h3>
        <span class="flex">
            <p>
                {dayjs(day).format("ddd DD MMM")}
            </p>
            <p>
                &nbsp;-&nbsp;
            </p>
            <p class="font-semibold">
                {isOutbound ? outbound : inbound} to {isOutbound ? inbound : outbound}
            </p>
        </span>
    </div>
    <slot />
</div>