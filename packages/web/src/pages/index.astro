---
import Layout from '../layouts/Layout.astro'
import SearchForm from '../components/SearchForm.svelte'
---
<Layout title="Railopedia">
    <main class="flex flex-col p-2 gap-2 grow">
        <span class="flex flex-col items-center md:items-start md:flex-row-reverse">
            <span class="flex flex-col md:self-center md:p-5">
                <h2 class="text-2xl font-bold p-3 grow md:text-center md:text-4xl">
                    Countless Savings. One Simple Search.
                </h2>
                <p class="hidden md:block text-large">
                    Railopedia is the best place to find the cheapest train tickets. 
                    We compare prices from all the top ticketting sites, to garauntee
                    you get the best deal.
                </p>
            </span>
            <div class="md:p-10">
                <SearchForm client:load />
            </div>
        </span>
    </main>
</Layout>
